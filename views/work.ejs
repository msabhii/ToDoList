<%- include("partials/header.ejs") %>
<div class="main">
<h2 class="date ">Work List</h2>

<div class="box">
    <ul>
        <li>Important Work: </li>
        <% for (i=0; i<worklist.length;i++){ %>
            <div class="item">
                <input type="checkbox" class="strikethrough">
                <li> <%= worklist[i] %> </li>
            </div>
        <% } %>
        <form action="/work" method="post">
            <input type="text" autocomplete="off" name="newWorks" class="inputtype strikethrough" placeholder="Some Important Work">
            <a href="/"><button type="submit">+</button></a>
            </form>
        </ul>
    </div>
</div>

<%- include("partials/footer.ejs") %>
